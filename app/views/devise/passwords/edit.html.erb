<section class="signin">
  <div class="signin__wrap">
    <h2 class="signin__title">Change password</h2>
    <div class="signin__form">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= resource.errors.full_messages.to_sentence %>
        <div class="form-inputs">
          <%= f.input :password,
                      placeholder: 'New password',
                      autofocus: true,
                      label: false,
                      error: false,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: 'new-password' } %>
          <%= f.error :password, class: 'form-error' %>
          <%= f.input :password_confirmation,
                      label: false,
                      error: false,
                      placeholder: 'Confirm your new password',
                      input_html: { autocomplete: 'new-password' } %>
          <%= f.error :password_confirmation, class: 'form-error'  %>
        </div>
        <div class="signin__button form-actions">
          <%= f.button :submit, 'Change my password' %>
        </div>
      <% end %>
      <div class="signin__links">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</section>
